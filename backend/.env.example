# Database Configuration
MONGO_URL="mongodb://localhost:27017"
DB_NAME="route_tracker_db"

# CORS Configuration
# WARNING: Using "*" allows all origins. In production, specify exact origins.
# Example: CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
CORS_ORIGINS="*"

# JWT Configuration
# SECURITY WARNING: Change this to a strong, random secret in production!
# Generate with: openssl rand -hex 32
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_IN_PRODUCTION"

# Google Maps API Key
# SECURITY WARNING: This key should be restricted in Google Cloud Console
# Get your own key at: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY="YOUR_GOOGLE_MAPS_API_KEY_HERE"

# Mock Authentication (for development/testing without MongoDB)
# Set to "false" in production and use real MongoDB authentication
MOCK_AUTH_ENABLED="true"
MOCK_USERNAME="testuser"
MOCK_PASSWORD="password123"
MOCK_USER_EMAIL="testuser@example.com"
MOCK_USER_ID="mock-user-123"

# Location API Token (for app-login endpoint)
# SECURITY WARNING: Keep this secret! Used for stateless authentication
# Generate with: openssl rand -base64 32
LOC_API_TOKEN="YOUR_LOC_API_TOKEN_HERE"
LOC_API_BASEURL="https://www.bahar.co.il/location/api"

# MyTrips APIs
MYTRIPS_API_BASEURL="https://mytrips-api.bahar.co.il"
