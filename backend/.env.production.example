# Production Environment Variables for Backend
# Copy this file to .env and fill in your values

# Authentication Mode
# Set to "false" for production (uses real APIs)
MOCK_AUTH_ENABLED="false"

# JWT Secret
# Generate a secure random secret: openssl rand -hex 32
# IMPORTANT: Keep this secret and never commit it
JWT_SECRET="your-secure-random-jwt-secret-here"

# Mock Credentials (only used if MOCK_AUTH_ENABLED="true")
MOCK_USERNAME="testuser"
MOCK_PASSWORD="password123"
MOCK_USER_EMAIL="testuser@example.com"
MOCK_USER_ID="mock-user-123"

# Location API Configuration
LOC_API_TOKEN="your-location-api-token-here"
LOC_API_BASEURL="https://www.bahar.co.il/location/api"

# MyTrips API Configuration
MYTRIPS_API_BASEURL="https://mytrips-api.bahar.co.il"

# CORS Configuration
# Set to your frontend domain(s), comma-separated
# IMPORTANT: Do NOT use "*" in production
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# MongoDB Configuration (if using MongoDB)
# MONGODB_URL="mongodb://localhost:27017"
# MONGODB_DB_NAME="mytrips"

# Notes:
# - Never commit this file to version control
# - Keep all secrets secure
# - Use environment-specific values for each deployment
# - Restart the backend after changing these values

